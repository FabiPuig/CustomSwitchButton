<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape>
                    <size android:height="48dp" />
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#777" />
                    <solid android:color="#00FF00"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape>
                    <size android:height="48dp" />
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#777" />
                    <solid android:color="#FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>